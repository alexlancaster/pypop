	year = {1994},
	keywords = {*Alleles ; *Genetics, Genetic ; Sampling Studies ; Selection (Genetics) ; Support, Non-U.S. Gov't ; Support, P.H.S., Population ; Homozygote ; Models, U.S. Gov't},
	pages = {71--4},
