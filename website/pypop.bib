	journal = {Tissue Antigens},
	author = {Chen, J. J and Hollenbach, J. A and Trachtenberg, E. A and Just, J. J and Carrington, M. and Ronningen, K. S and Begovich, A. and King, M. C and McWeeney, S. and Mack, S. J and Erlich, H. A and Thomson, G.},
	year = {1999},
